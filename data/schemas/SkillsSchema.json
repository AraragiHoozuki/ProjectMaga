{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Skill",
  "description": "",
  "type": "object",
  "patternProperties": {
    "^[A-Z0-9_]*$":{
      "properties": {
        "iname":{"type": "string"},
        "expr":{"type": "string"},
        "name":{"type": "string"},
        "script": {"type": "string"},
        "icon": {"type": "string"},
        "passive": {"type": "boolean"},
        "ap": {"type": "number"},
        "memory": {"type": "number"},
        "sp": {"type": "array", "items": {"type": "number"}},
        "modifiers": {"type": "array", "items": {"type": "string"}},
        "manacost": {"type": "array", "items": {"type": "number"}},
        "cpcost": {"type": "array", "items": {"type": "number"}},
        "max_sct": {"type": "array", "items": {"type": "number"}},
        "max_stack": {"type": "array", "items": {"type": "number"}},
        "ctcost": {"type": "array", "items": {"type": "number"}},
        "global": {"type": "boolean"},
        "animaiton": {"type": "string"},
        "actionPoints": {"type": "array", "items": {"type": "number"}},
        "sound": {"type": "string"},
        "voice": {"type": "string"},
        "specials": {"type": "array", "items": {"type": "object", "properties": {
          "name": {"type": "string"},
          "tooltip": {"type": "string"},
          "values": {"type":  "array", "items": {"type":  "number"}}
        }}}
      },
      "required": ["iname", "name", "script", "icon", "passive", "ap", "memory","modifiers", "manacost", "cpcost", "ctcost", "specials"]
    }
  }
}